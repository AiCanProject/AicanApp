<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="350dp"
android:layout_height="200dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="24dp"
android:layout_margin="10dp"
android:id="@+id/cooling_Cardview"
app:cardElevation="10dp">

<RelativeLayout
    android:id="@+id/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cooling_custom_bg"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivOptions"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_three_dots"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/cooling_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/cooling_logo"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/custom_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingHorizontal="30dp"
        android:layout_toStartOf="@id/cooling_image"
        android:text="Name"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/current_temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cooling"
        android:text="Current Cooling"
        android:paddingHorizontal="30dp"
        android:layout_toLeftOf="@id/cooling_image"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/cooling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="89â„ƒ"
        android:textColor="@color/white"
        android:textSize="55dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="30dp"
        android:textStyle="bold"
        android:layout_below="@id/custom_device_name"/>



</RelativeLayout>


</androidx.cardview.widget.CardView>
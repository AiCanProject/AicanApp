<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".specificactivities.TemperatureActivity">

    <Button
        android:id="@+id/themButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/set_temperature"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toEndOf="@+id/curveSeekView"
        app:layout_constraintBottom_toTopOf="@id/line_chart" />

    <TextView
        android:id="@+id/temperatureLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/current_temperature"
        android:textAllCaps="true"
        android:textColor="?attr/secondaryTextColor"
        app:layout_constraintBottom_toTopOf="@id/temperatureTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/curveSeekView"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aican.aicanapp.tempController.ProgressLabelView
        android:id="@+id/temperatureTextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tempLabelTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/temperatureLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/temperatureLabelTextView" />

    <TextView
        android:id="@+id/tempLabelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:clipChildren="false"
        android:fontFamily="sans-serif-light"
        android:text="@string/temperature"
        android:textAllCaps="true"
        android:textColor="?attr/secondaryTextColor"
        app:layout_constraintBottom_toTopOf="@id/humidityTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/temperatureLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/temperatureTextView"
        app:layout_constraintVertical_chainStyle="packed" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.aican.aicanapp.tempController.CurveSeekView
        android:id="@+id/curveSeekView"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/line_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.aican.aicanapp.tempController.CurveSeekView>

    <com.aican.aicanapp.tempController.ProgressLabelView
        android:id="@+id/humidityTextView"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/temperatureLabelTextView"
        app:layout_constraintTop_toBottomOf="@id/tempLabelTextView"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintBottom_toTopOf="@id/graphLoggingOptions"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        layout="@layout/graph_time_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="@id/line_chart"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/graphLoggingOptions"
        layout="@layout/graph_logging_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
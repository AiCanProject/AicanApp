<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/phone_Cardview"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/temp_custom_bg"
        android:padding="5dp">


        <ImageView
            android:id="@+id/ivOptions"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_three_dots"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/temp_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/temp_logo" />

        <TextView
            android:id="@+id/custom_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingTop="10dp"
            android:text="Custom Device Name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/current_temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ph"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/temp_image"
            android:paddingHorizontal="30dp"
            android:text="Current Temperature"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_device_name"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="30dp"
            android:text="89â„ƒ"
            android:textColor="@color/white"
            android:textSize="55dp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="350dp"
android:layout_height="200dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="24dp"
android:layout_margin="10dp"
android:id="@+id/ph_Cardview"
app:cardElevation="10dp">

<RelativeLayout
    android:id="@+id/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ph_custom_bg"
    android:padding="5dp">


    <ImageView
        android:id="@+id/temp_image"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/ph_logo"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/custom_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Device Name"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingHorizontal="30dp"
        android:layout_toLeftOf="@id/temp_image"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/current_temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ph"
        android:text="Current pH Value"
        android:paddingHorizontal="30dp"
        android:layout_toLeftOf="@id/temp_image"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="55dp"
        android:paddingHorizontal="30dp"
        android:textStyle="bold"
        android:layout_below="@id/custom_device_name"/>



</RelativeLayout>


</androidx.cardview.widget.CardView>
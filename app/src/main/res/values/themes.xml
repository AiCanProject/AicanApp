<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AicanApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main1</item>
        <item name="colorPrimaryVariant">@color/main2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/main1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="primaryTextColor">@color/primaryText</item>
        <item name="secondaryTextColor">@color/secondaryText</item>
        <item name="warningTextColor">@color/warningText</item>
        <item name="backgroundColor">@color/background</item>
        <item name="selectedLabelColor">@color/colorAccent</item>
        <item name="labelColor">@color/white</item>
        <item name="scaleColor">@color/scaleColor</item>
        <item name="sliderIconColor">@color/background</item>
        <item name="sliderColor">@color/white</item>
        <item name="firstGradientColor">@color/colorAccent</item>
        <item name="secondGradientColor">@color/secondaryAccent</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/secondaryText</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColor">@color/background</item>
        <item name="primaryTextColor">@color/blueDark</item>
        <item name="secondaryTextColor">@color/blueDarkAlpha</item>
        <item name="warningTextColor">@color/blueDark</item>
        <item name="backgroundColor">@color/white</item>
        <item name="selectedLabelColor">@color/blueLight</item>
        <item name="labelColor">@color/blueDark</item>
        <item name="scaleColor">@color/white</item>
        <item name="sliderIconColor">@color/white</item>
        <item name="sliderColor">@color/blueDark</item>
        <item name="firstGradientColor">@color/pink</item>
        <item name="secondGradientColor">@color/blueLight</item>
    </style>


    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blueDark</item>
        <item name="colorSwitchThumbNormal">@color/lightWhite</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_white_top_rounded_20</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aican.aicanappnoncfr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AicanApp"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon"
        tools:targetApi="m">
        <activity
            android:name=".specificactivities.EcActivity"
            android:exported="false"
            android:screenOrientation="landscape"/>
        <!-- <activity -->
        <!-- android:name=".CheckConnectionReciever" -->
        <!-- android:exported="false" /> -->
        <activity
            android:name=".InstructionActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.aican.aicanappnoncfr.Dashboard.AdminLoginActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.aican.aicanappnoncfr.userdatabase.UserDatabase"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Export"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.aican.aicanappnoncfr.dialogs.AuthenticateRoleDialog"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="com.aican.aicanappnoncfr.Dashboard.SettingActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity android:name=".ConnectDeviceActivity" />
        <activity android:name="com.aican.aicanappnoncfr.Authentication.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EcTdsCalibrateActivity" />
        <activity
            android:name=".PhCalibrateActivity"
            android:parentActivityName=".PhActivity" />
        <activity
            android:name=".PhActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.aican.aicanappnoncfr.AddDevice.AddDeviceOption" />
        <activity
            android:name=".TemperatureActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.aican.aicanappnoncfr.Dashboard.Dashboard"
            android:screenOrientation="landscape" />
        <activity android:name="com.aican.aicanappnoncfr.MainActivity" />
        <activity android:name="com.aican.aicanappnoncfr.Authentication.LoginActivity" />
        <activity android:name="com.aican.aicanappnoncfr.Authentication.SignUpActivity" />
        <activity android:name=".PumpCalibrateActivity" />
        <activity
            android:name=".PumpActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.aican.aicanappnoncfr.AddDevice.ScanQrActivity" />

        <service android:name="com.aican.aicanappnoncfr.graph.ForegroundService" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
            //provider_paths.xml file path in this example
        </provider>

        <service
            android:name=".Services.LogHoldBackgroundService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".Services.AlarmBackgroundService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>